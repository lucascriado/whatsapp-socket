{
  "compilerOptions": {
    "outDir": "./dist",        // Define a pasta de saída para os arquivos compilados
    "rootDir": "./src",        // Define a pasta raiz onde os arquivos TypeScript estão localizados
    "target": "es6",           // Define a versão do ECMAScript alvo
    "module": "commonjs",      // Define o sistema de módulo utilizado
    "strict": true,            // Ativa a verificação estrita de tipos
    "esModuleInterop": true,   // Permite a interoperabilidade com módulos ES6
    "skipLibCheck": true,      // Ignora a verificação de tipos nos arquivos de declaração de tipos
    "forceConsistentCasingInFileNames": true // Garante a consistência na capitalização dos nomes de arquivos
  },
  "include": ["src"]           // Inclui a pasta src no processo de compilação
}
