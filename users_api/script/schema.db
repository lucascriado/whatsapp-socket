CREATE DATABASE users_api;

GRANT ALL PRIVILEGES ON users_api.* TO 'admin'@'localhost';
FLUSH PRIVILEGES;

USE users_api;

CREATE TABLE users (
    username VARCHAR(255) NOT NULL UNIQUE,
    password VARCHAR(255) NOT NULL,
    uuid VARCHAR(36) NOT NULL 
);

CREATE TABLE auth_users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    uuid VARCHAR(50) NOT NULL,
    auth_token VARCHAR(255) NOT NULL,
    fullName VARCHAR(150) COLLATE utf8mb4_general_ci,
    email VARCHAR(200) COLLATE utf8mb4_general_ci,
    pessoa_id INT,
    client_id INT,
    owner_pessoa_id INT,
    remoteOS VARCHAR(50),
    remoteIP VARCHAR(16),
    pcName VARCHAR(50),
    APPVersion INT,
    timelogon INT,
    expirylogon INT,
    blockedsession INT,
    UNIQUE (auth_token)
);